<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignInActivity">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="120dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/oat_logo" />
    </androidx.cardview.widget.CardView>

    <EditText
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="40dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/sign_buttons_design"
        android:ems="10"
        android:gravity="center"
        android:hint="Введите код группы"
        android:inputType="text"
        android:textColorHint="@color/black"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="@id/signin_asStudentButton"
        android:layout_marginTop="70dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/textView3" />

    <EditText
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="335dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/sign_buttons_design"
        android:gravity="center"
        android:hint="Введите Ваш поряд. номер\n на момент регистрации"
        android:inputType="number"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:textColorHint="@color/black"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <EditText
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="235dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/sign_buttons_design"
        android:gravity="center"
        android:hint="Введите пароль"
        android:inputType="textPassword"
        android:textColorHint="@color/black"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />


    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:text="Вход"
        android:textColor="@color/black"
        android:textSize="40dp"
        app:layout_constraintBottom_toTopOf="@id/cardView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <Button
        android:id="@+id/signin_asStudentButton"
        android:layout_width="168dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="-25dp"
        android:backgroundTint="@color/light_grey"
        android:text="Студента"
        android:textColor="@color/grey"
        app:layout_constraintEnd_toStartOf="@id/cardView2"
        app:layout_constraintTop_toBottomOf="@id/cardView2" />

    <Button
        android:id="@+id/signin_asTeacherButton"
        android:layout_width="168dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="-25dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/purple_500"
        android:text="Преподавателя"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toEndOf="@id/cardView2"
        app:layout_constraintTop_toBottomOf="@id/cardView2" />

    <Button
        android:id="@+id/signin_button"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="0dp"
        android:backgroundTint="@color/purple_500"
        android:text="Войти"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@id/signin_asTeacherButton"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <Button
        android:id="@+id/switch_button"
        android:layout_width="218dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="0dp"
        android:backgroundTint="@color/teal_700"
        android:text="Зарегистрироваться"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@id/signin_asStudentButton"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <!--<View
        android:id="@+id/touchableArea"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:contentDescription="touchableArea"/-->
</androidx.constraintlayout.widget.ConstraintLayout>